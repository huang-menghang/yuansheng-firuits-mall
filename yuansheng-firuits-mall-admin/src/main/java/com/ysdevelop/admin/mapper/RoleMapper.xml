<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ysdevelop.admin.mapper.RoleDao">

<select id="listRolesByPagination" resultType="com.ysdevelop.admin.entity.Role">
select `id`,`roleName` as `name`,`roleDescription` as `description`
from `t_ys_firuits_roles` 
limit #{pagination.start},#{pagination.pageSize}
</select>
<select id="countRole" resultType="java.lang.Integer">
select count(`id`)
from `t_ys_firuits_roles`
</select>

<delete id="deleteRoleById">
delete from `t_ys_firuits_roles`
where id = #{id}
</delete>

<select id="getRoleIdByName" resultType="java.lang.Integer">
select `id` 
from `t_ys_firuits_roles` 
where `roleName` = #{roleName}
</select>

<insert id="saveRole">
insert into `t_ys_firuits_roles`(`roleName`,`roleDescription`)
values(#{roleName},#{roleDescription})
</insert>

<select id="getRoleById" resultType="com.ysdevelop.admin.entity.Role">
select `id`,`roleName` as `name`,`roleDescription` as `description`
from `t_ys_firuits_roles`
where id = #{id}
</select>
<update id="updateRoleById">
update `t_ys_firuits_roles` 
<set>
<if test="roleName!=null and roleName!='null' and roleName!=''">
roleName = #{roleName},
</if>
<if test="description!=null and description!='null' and description!=''">
roleDescription = #{description}
</if>
</set>
where id =#{id}
</update>
</mapper>